{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}
